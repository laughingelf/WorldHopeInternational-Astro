---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Hero from "../../components/shared/Hero.astro";

const seo = {
  title: "Message Sent",
  description:
    "Thanks for reaching out to Word Hope International. We’ve received your message and will follow up soon.",
};

const hero = {
  heading: "Message Sent",
  subheading:
    "Thank you for reaching out. We’ve received your message and will follow up soon.",
  primaryCtaText: "View Programs",
  primaryCtaLink: "/programs",
  secondaryCtaText: "Donate",
  secondaryCtaLink: "/donate",
  backgroundImage: "/img/contact-hero.jpeg", // change if you want
};
---

<BaseLayout hero={true} seo={seo}>
  <Hero {...hero} />

  <section class="bg-green-50 py-16 px-6 md:px-12">
    <div class="max-w-3xl mx-auto">
      <div class="rounded-2xl border border-green-100 bg-white shadow-sm p-8 md:p-10 text-center">
        <div class="mx-auto mb-4 inline-flex h-14 w-14 items-center justify-center rounded-full bg-green-100 text-green-900">
          <span class="text-2xl" aria-hidden="true">✅</span>
          <span class="sr-only">Success</span>
        </div>

        <h1 class="text-3xl md:text-4xl font-extrabold text-green-900">
          Thank you!
        </h1>

        <p class="mt-3 text-lg text-green-800">
          Your message has been received. We typically respond within
          <span class="font-semibold"> 1–2 business days</span>.
        </p>

        <div class="mt-6 rounded-xl border border-green-100 bg-green-50 p-4 text-left">
          <p class="text-sm font-semibold text-green-900">Want to help us respond faster?</p>
          <ul class="mt-2 text-sm text-green-800 space-y-1">
            <li>• If your message is about a donation, include the email used at checkout and the approximate date.</li>
            <li>• If you prefer a call or text, include the best phone number and your preferred time.</li>
          </ul>
        </div>

        <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-3">
          <a
            href="/"
            class="inline-flex w-full sm:w-auto items-center justify-center rounded-xl bg-[#e01b24] px-6 py-3 font-semibold text-white hover:bg-red-800 transition focus:outline-none focus:ring-2 focus:ring-[#e01b24]/40 focus:ring-offset-2"
          >
            Back to Home
          </a>

          <a
            href="/programs"
            class="inline-flex w-full sm:w-auto items-center justify-center rounded-xl border border-[#e01b24] px-6 py-3 font-semibold text-[#e01b24] hover:bg-red-50 transition focus:outline-none focus:ring-2 focus:ring-[#e01b24]/30 focus:ring-offset-2"
          >
            Explore Programs
          </a>
        </div>

        <p class="mt-6 text-xs text-green-700">
          Prefer email?{" "}
          <a class="underline font-semibold hover:opacity-80" href="mailto:wordhopeint@gmail.com">
            wordhopeint@gmail.com
          </a>
        </p>
      </div>

      {/* Trust strip */}
      <div class="mt-6 grid gap-4 sm:grid-cols-3">
        <div class="rounded-xl border border-green-100 bg-white p-4 text-center shadow-sm">
          <p class="text-sm font-semibold text-green-900">501(c)(3)</p>
          <p class="mt-1 text-xs text-green-700">Donations are tax-deductible as allowed by law.</p>
        </div>
        <div class="rounded-xl border border-green-100 bg-white p-4 text-center shadow-sm">
          <p class="text-sm font-semibold text-green-900">Transparent Impact</p>
          <p class="mt-1 text-xs text-green-700">Follow progress on Project Updates.</p>
          <a href="/project-updates" class="mt-2 inline-block text-xs font-semibold underline text-green-900 hover:opacity-80">
            View Updates
          </a>
        </div>
        <div class="rounded-xl border border-green-100 bg-white p-4 text-center shadow-sm">
          <p class="text-sm font-semibold text-green-900">Get Involved</p>
          <p class="mt-1 text-xs text-green-700">Pray, sponsor, volunteer, or give.</p>
          <a href="/programs" class="mt-2 inline-block text-xs font-semibold underline text-green-900 hover:opacity-80">
            See Programs
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
