---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  seo={{
    title: "Page Not Found",
    description: "Sorry, we couldn’t find that page. Head back home or visit the programs and gallery.",
    noindex: true,
  }}
>
  <section class="nf">
    <div class="nf__card">
      <div class="nf__badge">404</div>

      <h1 class="nf__title">Page Not Found</h1>

      <p class="nf__text">
        The page you’re looking for may have moved, or the link may be outdated.
        You can head back home, explore our programs, or visit the gallery.
      </p>

      <div class="nf__actions">
        <a class="btn btn--primary" href="/">Go Home</a>
        <a class="btn btn--secondary" href="/programs">View Programs</a>
        <a class="btn btn--ghost" href="/contact">Contact Us</a>
      </div>

      <div class="nf__links">
        <a href="/donate">Donate</a>
        <span aria-hidden="true">•</span>
        <a href="/project-updates">Project Updates</a>
        <span aria-hidden="true">•</span>
        <a href="/gallery">Gallery</a>
      </div>
    </div>
  </section>

  <style>
    .nf {
      padding: 4.5rem 1.5rem 6rem;
      display: grid;
      place-items: center;
    }

    .nf__card {
      width: 100%;
      max-width: 56rem;
      border-radius: 1rem;
      background: #ffffff;
      box-shadow: 0 18px 40px rgba(0,0,0,0.08);
      border: 1px solid rgba(20, 83, 45, 0.10);
      padding: 2.25rem 1.75rem;
      position: relative;
      overflow: hidden;
    }

    /* subtle brand accent */
    .nf__card::before{
      content:"";
      position:absolute;
      inset:0;
      background:
        radial-gradient(700px 300px at 20% 0%, rgba(20,83,45,0.12), transparent 60%),
        radial-gradient(700px 300px at 80% 100%, rgba(224,27,36,0.12), transparent 60%);
      pointer-events:none;
    }

    .nf__badge{
      position: relative;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.35rem 0.75rem;
      border-radius: 999px;
      background: rgba(20, 83, 45, 0.10);
      color: #14532d;
      font-weight: 800;
      letter-spacing: 0.08em;
      font-size: 0.85rem;
      text-transform: uppercase;
      margin-bottom: 1rem;
    }

    .nf__title{
      position: relative;
      margin: 0 0 0.75rem;
      font-size: clamp(2rem, 3.4vw, 2.75rem);
      line-height: 1.1;
      font-weight: 900;
      color: #14532d;
    }

    .nf__text{
      position: relative;
      margin: 0 0 1.75rem;
      font-size: 1.1rem;
      line-height: 1.7;
      color: rgba(20, 83, 45, 0.85);
      max-width: 48rem;
    }

    .nf__actions{
      position: relative;
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      align-items: center;
      margin-bottom: 1.25rem;
    }

    .btn{
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.85rem 1.1rem;
      border-radius: 0.75rem;
      font-weight: 800;
      text-decoration: none;
      transition: transform 120ms ease, opacity 160ms ease, background 160ms ease, border-color 160ms ease;
      user-select: none;
    }
    .btn:active{ transform: scale(0.98); }

    .btn--primary{
      background: #e01b24;
      color: #fff;
    }
    .btn--primary:hover{ opacity: 0.92; }

    .btn--secondary{
      background: rgba(20, 83, 45, 0.10);
      color: #14532d;
      border: 1px solid rgba(20, 83, 45, 0.18);
    }
    .btn--secondary:hover{
      background: rgba(20, 83, 45, 0.14);
      border-color: rgba(20, 83, 45, 0.24);
    }

    .btn--ghost{
      background: rgba(255,255,255,0.0);
      color: #14532d;
      border: 1px solid rgba(20, 83, 45, 0.18);
    }
    .btn--ghost:hover{
      background: rgba(20, 83, 45, 0.06);
      border-color: rgba(20, 83, 45, 0.26);
    }

    .nf__links{
      position: relative;
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      align-items: center;
      color: rgba(20, 83, 45, 0.65);
      font-size: 0.95rem;
    }

    .nf__links a{
      color: rgba(20, 83, 45, 0.85);
      text-underline-offset: 4px;
      text-decoration: underline;
      text-decoration-color: rgba(20, 83, 45, 0.25);
      transition: color 160ms ease, text-decoration-color 160ms ease;
    }

    .nf__links a:hover{
      color: #e01b24;
      text-decoration-color: rgba(224, 27, 36, 0.45);
    }

    @media (min-width: 768px){
      .nf__card{
        padding: 3rem 2.5rem;
      }
    }
  </style>
</BaseLayout>
